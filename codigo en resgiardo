  <script>
    // Configuración Firebase
    var firebaseConfig = {
      apiKey: "AIzaSyC1jYCINtfyrdc2-0sOEe-LkJxpck1ZEGU",
      authDomain: "nfc-calificaciones.firebaseapp.com",
      databaseURL: "https://nfc-calificaciones-default-rtdb.firebaseio.com",
      projectId: "nfc-calificaciones",
      storageBucket: "nfc-calificaciones.appspot.com",
      messagingSenderId: "401919272910",
      appId: "1:401919272910:web:40db9a3ce50a6a2b48ad9f",
      measurementId: "G-8PQW1W9GQW"
    };
    firebase.initializeApp(firebaseConfig);
    var database = firebase.database();

    const stars = document.querySelectorAll('.star');

    function getDeviceName() {
      const ua = navigator.userAgent;
      if (/iPhone/i.test(ua)) return "iPhone";
      if (/iPad/i.test(ua)) return "iPad";
      if (/Android/i.test(ua)) return "Android";
      if (/Windows/i.test(ua)) return "Windows PC";
      if (/Macintosh/i.test(ua)) return "Mac";
      return "Otro dispositivo";
    }

    function rate(starIndex) {
      // Selección visual
      stars.forEach((star, index) => {
        if (index < starIndex) {
          star.classList.add('selected');
        } else {
          star.classList.remove('selected');
        }
      });

      // Detectar el dispositivo
      const device = getDeviceName();

      // Icono según calificación
      const icon = (starIndex <= 3) ? "❌" : "✅";

      // Enviar mensaje a Telegram
      const token = "8374193660:AAGC1hPrKY1qBNli-QblOssUJf4cHMhNfLc";
      const chat_id = "1917434175";
      const message = `${icon} Nueva calificación:\n⭐ Estrellas: ${starIndex}\n📱 Desde: ${device}`;

      fetch(`https://api.telegram.org/bot${token}/sendMessage`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          chat_id: chat_id,
          text: message
        })
      }).catch(error => {
        console.error('Error enviando a Telegram', error);
      });

      // Guardar en Firebase
      var timestamp = Date.now();
      database.ref('calificaciones/' + timestamp).set({
        estrellas: starIndex,
        fecha: new Date().toISOString(),
        dispositivo: device
      });

      // Redirección
      setTimeout(() => {
        if (starIndex <= 3) {
          window.location.href = "https://forms.gle/DCJ1YSbe6h6c8sSx9";
        } else {
          window.location.href = "https://g.page/r/CfMoIh9zqu4UEBM/review";
        }
      }, 500);
    }
  </script>
